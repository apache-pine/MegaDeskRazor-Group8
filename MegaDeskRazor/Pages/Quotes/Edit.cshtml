@page
@model MegaDeskRazor.Pages.Quotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />
            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" required />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.DeliveryTypeId" class="control-label"></label>
                <select asp-for="DeskQuote.DeliveryTypeId" class="form-control" asp-items="ViewBag.DeliveryTypeId" required>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="Desk.Width" class="form-control" type="number" min="24" max="96" required />
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="Desk.Depth" class="form-control" type="number" min="12" max="48" required />
            </div>
            <div class="form-group">
                <label asp-for="Desk.NumDrawers" class="control-label"></label>
                <input asp-for="Desk.NumDrawers" class="form-control" type="number" min="0" max="7" required />
            </div>
            <div class="form-group">
                <label asp-for="Desk.DesktopMaterialId" class="control-label"></label>
                <select asp-for="Desk.DesktopMaterialId" class="form-control" asp-items="ViewBag.DesktopMaterialId" required>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
